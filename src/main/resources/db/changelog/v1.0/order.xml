<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Lifanov" dbms="postgres">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order"/>
            </not>
        </preConditions>

        <createTable tableName="order"
                     remarks="Таблица зарегистрированных заказов ">
            <column name="publication_date" type="uuid"
                    remarks="время создания задаза в милисекундах">
                <constraints primaryKey="true"
                             primaryKeyName="order_pk"
                             nullable="false"/>
            </column>
            <column name="car_id" type="uuid" remarks="Идентификатор автомобиля">
                <constraints foreignKeyName="car_fk"
                             referencedTableName="car"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="mechanic_id" type="uuid" remarks="Айди механика">
                <constraints foreignKeyName="mechanic_fk"
                             referencedTableName="mechanic"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="price" type="int" remarks="Цена услуги">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <comment>Задача по созданию пользователя</comment>
    </changeSet>

</databaseChangeLog>
